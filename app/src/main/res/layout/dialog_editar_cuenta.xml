<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Cuenta"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDialogFoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="2dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/ivDialogFoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            android:padding="12dp"
            app:tint="@color/color_acento_primario"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toca para cambiar foto"
        android:textSize="12sp"
        android:textColor="@color/color_acento_primario"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etDialogNombre"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nombre"
        android:background="@android:drawable/editbox_background"
        android:paddingHorizontal="12dp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/etDialogApellidos"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Apellidos"
        android:background="@android:drawable/editbox_background"
        android:paddingHorizontal="12dp"/>

</LinearLayout>